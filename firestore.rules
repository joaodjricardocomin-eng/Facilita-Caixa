rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // MODO DE TESTE / DESENVOLVIMENTO
    // Permite leitura e escrita para qualquer pessoa que tenha as chaves de API do projeto.
    // Ideal para o início do projeto. Em produção, altere para 'if request.auth != null'.
    
    match /system/main_v1 {
      allow read, write: if true;
    }
    
    match /{document=**} {
      allow read, write: false;
    }
  }
}